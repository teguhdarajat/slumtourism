<% provide(:paket_nama, 'Daftar Paket Wisata') %>
<%= render partial: "partials/navadmin" %>
<section class="ftco-section bg-light" style="padding: 3em 0">
    <div class="container">
        <div class="row">
            <div class="col-md-2 sidebar p-1 pl-md-4 heading-section" style="background-color: #fff" >
                <h3>Sidebar</h3>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-9 p-2 pl-md-5 heading-section" style="background-color: #fff">
                <h2>Daftar Paket Wisata</h2>
            
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nama</th>
                            <th>Harga</th>
                            <th>Deskripsi</th>
                            <th colspan = "4">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @paket.each do |paket| %>
                            <tr>
                                <td><%= paket.nama %></td>
                                <td><%= paket.harga %></td>                            
                                <td><%= truncate(paket.deskripsi, length: 80, separator: ' ') %></td>
                                <td><%= link_to  "Lihat", paket %></td>
                                <td><%= link_to  "Ubah", edit_paket_path(paket) %></td>
                                <td><%= link_to  "Hapus", paket, method: :delete, data: { confirm: 'Apakah anda yakin
                                akan menghapus data ini ?'} %>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
                <br>                            
                <%= link_to  "Tambah", new_paket_path, class: "btn btn-default btn-primary" %>
            </div>                   
        </div>
    </div>
</section>