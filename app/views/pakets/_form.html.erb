<%= form_for @paket do |f| %>
<%  if @paket.errors.any? %>
 <h2><%= pluralize(@paket.errors.count, "error") %> menyebabkan data gagal disimpan</h2>
 <ul>
   <% @paket.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
   <% end %>
 </ul>
 <% end %>

 <div class="form-group">
  <div class="col-sm-12">
    <%= f.label :nama, "Nama Paket:" %>
  </div>
  <div class="col-sm-12">
    <%= f.text_field :nama, class: "form-control", style: "margin: 0;" %>
  </div>
 </div>

  <div class="form-group">
    <div class="col-sm-12">
        <%= f.label :harga %>       
    </div>
    <div class="col-sm-12">
        <%= f.text_field :harga, class: "form-control", style: "margin: 0;" %>
    </div>
  </div>

  <div class="form-group">
      <div class="col-sm-12">
          <%= f.label :maxpeople %>       
      </div>
      <div class="col-sm-12">
          <%= f.text_field :maxpeople, class: "form-control", style: "margin: 0;" %>
      </div>
    </div>

  <div class="form-group">
    <div class="col-sm-12">
        <%= f.label :deskripsi %> 
    </div>
    <div class="col-sm-12">
        <%= f.text_area :deskripsi, class: "form-control", rows: "3" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <%= f.label :image %>      
    </div>
    <div class="col-sm-12">
      <%= f.file_field :image, class: "form-control-field", style: "margin: 0;" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
        <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
    </div>
  </div>
  
<% end %>